{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    },
    "nextjs-docs-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@taiyokimura/nextjs-docs-mcp@latest"
      ],
      "env": {}
    },
    "stripe": {
      "type": "http",
      "url": "https://mcp.stripe.com/"
    },
    "next-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "next-devtools-mcp@latest"
      ],
      "env": {}
    }
  }
}